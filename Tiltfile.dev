local_resource(
  name = 'dev:efs-submission-web-build',
  cmd = 'mvn compile',
  deps = ['src/main']
)

custom_build(
    '169942020521.dkr.ecr.eu-west-1.amazonaws.com/local/efs-submission-web',
    'mvn -s settings.xml compile jib:dockerBuild -Dimage=$EXPECTED_REF',
    live_update = [
        sync(
          local_path = './target/classes',
          remote_path = '/app/classes'
        ),
        restart_container()
    ],
    deps = ['./target/classes']
)